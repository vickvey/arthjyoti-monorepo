{
  "name": "backend",
  "version": "1.0.0",
  "description": "ArthJyoti Backend",
  "private": true,
  "main": "./dist/index.js",
  "keywords": [
    "finance",
    "rest",
    "express",
    "typescript",
    "drizzle"
  ],
  "author": "Vivek Kumar",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node ./dist/index.js",
    "dev": "tsx watch ./src/index.ts",
    "db:generate": "pnpm drizzle-kit generate",
    "db:push": "pnpm drizzle-kit push",
    "db:seed": "tsx ./src/db/seed.ts",
    "db:dev": "rm -rf drizzle && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "prod": "npm run build && npm start"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "argon2": "^0.43.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.29",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
